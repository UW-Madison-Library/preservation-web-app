<%= form_with model: vault, url: organization_vaults_path, data: { turbo: "true", turbo_confirm: 'Are you sure you want to create this vault? Vaults cannot be deleted.' } do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: true, size: 22, minlength: 4, maxlength: 128 %>
  <%= form.label :description %>
  <%= form.text_area :description, required: true, maxlength: 255 %>

  <div class='actions'>
    <%= form.submit 'Create Vault' %>
  </div>
<% end %>
